{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"module": "es2015",
		"moduleResolution": "node",
		"noEmit": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"outDir": "lib",
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"strict": true,
		"strictNullChecks": true,
		"target": "es5",
		"declaration": true
	},
	"exclude": ["lib", "src/**/test/**"]
}
